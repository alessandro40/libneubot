DESTDIR =
PREFIX = /usr/local
DATADIR = $(PREFIX)/share
INCLUDEDIR = $(PREFIX)/include
LIBDIR = $(PREFIX)/lib

.PHONY: clean

CC = clang
CFLAGS = -Wall -Wmissing-prototypes -Wunreachable-code -pedantic \
                                    -fPIC -g @CFLAGS@
LDFLAGS = @LDFLAGS@ -shared

MAJOR = 1
MINOR = 0

HEADER = neubot.h
LINKERNAME = libneubot.@SHARED_LIBRARY_EXT@
SONAME = $(LINKERNAME).$(MAJOR)
REALNAME = $(SONAME).$(MINOR)
OBJECTS = echo.o httpclient.o http-parser/http_parser.o log.o poller.o \
		strtonum.o utils.o
PYMODULE = libneubot.py

$(REALNAME): $(OBJECTS)
	$(CC) $(LDFLAGS) $(OBJECTS) -o $(REALNAME) -levent -lm

echo.o: echo.c
httpclient.o: httpclient.c
http-parser/http_parser.o: http-parser/http_parser.c
log.o: log.c
poller.o: poller.c
strtonum.o: strtonum.c
utils.o: utils.c

LibNeubot.h: LibNeubot.java
	javac LibNeubot.java
	javah LibNeubot

clean:
	rm -f -- $(OBJECTS) $(REALNAME) `cat .gitignore`
install: $(REALNAME)
	install -d $(DESTDIR)$(LIBDIR)
	ln -fs $(DESTDIR)$(LIBDIR)/$(SONAME) $(DESTDIR)$(LIBDIR)/$(LINKERNAME)
	ln -fs $(DESTDIR)$(LIBDIR)/$(REALNAME) $(DESTDIR)$(LIBDIR)/$(SONAME)
	install -m 644 $(REALNAME) $(DESTDIR)$(LIBDIR)/
	install -d $(DESTDIR)$(INCLUDEDIR)
	install -m 644 $(HEADER) $(DESTDIR)$(INCLUDEDIR)/
	install -d $(DESTDIR)$(DATADIR)/libneubot
	install -m 644 $(PYMODULE) $(DESTDIR)$(DATADIR)/libneubot/
uninstall:
	rm -f -- $(DESTDIR)$(LIBDIR)/$(REALNAME)
	rm -f -- $(DESTDIR)$(LIBDIR)/$(SONAME)
	rm -f -- $(DESTDIR)$(LIBDIR)/$(LINKERNAME)
	rmdir $(DESTDIR)$(LIBDIR) || true
	rm -f -- $(DESTDIR)$(INCLUDEDIR)/$(HEADER)
	rmdir $(DESTDIR)$(INCLUDEDIR) || true
	rm -r -- $(DESTDIR)$(DATADIR)/libneubot/$(PYMODULE)
	rmdir $(DESTDIR)$(DATADIR)/libneubot || true
